<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/button_lesson1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:onClick="lessonOne"
        android:text="Lesson 1"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_lesson2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:onClick="lessonTwo"
        android:text="Lesson 2"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_lesson3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:onClick="lessonThree"
        android:text="Lesson 3"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_lesson4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:onClick="lessonFour"
        android:text="Lesson 4"
        android:textSize="20sp" />

</LinearLayout>
